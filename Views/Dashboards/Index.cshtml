@section Scripts {

    <script>
        var totalsalesamount = 0;
        var totalincomeamount = 0;
        var FertizilerAmount = 0;
        var Ownershare = 0;
        var Fuelamount = 0;
        var totalearningamount = 0;

        $(document).ready(function () {
            LoadDashboardData();
        });

        function LoadDashboardData() {

            var Url = '@Url.Action("GetDashboard", "Dashboards")';
            var Params = '';

            $.ajax({
                type: "POST",
                url: Url,
                data: Params,
                success: function (e) {
                    debugger;
                    response = JSON.parse(e)
                    if (response.length > 0) {
                        debugger;
                        for (let i = 0; i < response.length; i++) {
                            FertizilerAmount = response[0].FertizilerAmount;
                            Ownershare = response[0].Ownershare;
                            Fuelamount = response[0].Fuelamount;
                            totalearningamount = parseFloat(parseFloat(FertizilerAmount) + parseFloat(Ownershare) + parseFloat(Fuelamount)).toFixed(2);

                            if (response[i].BoatId == 1) {
                                if (response[i].Name == 'Sale') {
                                    $('#sale1').append(response[i].TotalAmount).append('K');
                                    totalsalesamount = parseFloat(response[i].TotalAmount);
                                } else if (response[i].Name == 'Expense') {
                                    $('#expense1').append(response[i].TotalAmount).append('K');
                                } else if (response[i].Name == 'Income') {
                                    $('#income1').append(response[i].TotalAmount).append('K');
                                    totalincomeamount = parseFloat(response[i].TotalAmount);
                                } else if (response[i].Name == 'Revenue') {
                                    $('#revenue1').append(response[i].TotalAmount).append('K');
                                }
                            } else if (response[i].BoatId == 2) {
                                if (response[i].Name == 'Sale') {
                                    $('#sale2').append(response[i].TotalAmount).append('K');
                                    totalsalesamount = parseFloat(totalsalesamount) + parseFloat(response[i].TotalAmount);
                                } else if (response[i].Name == 'Expense') {
                                    $('#expense2').append(response[i].TotalAmount).append('K');
                                } else if (response[i].Name == 'Income') {
                                    $('#income2').append(response[i].TotalAmount).append('K');
                                    totalincomeamount = parseFloat(totalincomeamount) + parseFloat(response[i].TotalAmount);
                                } else if (response[i].Name == 'Revenue') {
                                    $('#revenue2').append(response[i].TotalAmount).append('K');
                                }
                            }
                        }
                    } else {
                        $('#sale1').append('0k');
                        $('#expense1').append('0k');
                        $('#income1').append('0k');
                        $('#revenue1').append('0k');
                        $('#sale1').append('0k');
                        $('#expense1').append('0k');
                        $('#income1').append('0k');
                        $('#revenue1').append('0k');

                    }
                    debugger;
                    $('#totalsale').append(totalsalesamount).append('K');

                    $('#totalearning').append(totalearningamount).append('K');
                    $('#boatshare').append(Ownershare).append('K');
                    $('#ownercommission').append(Fuelamount).append('K');
                    $('#ferilizer').append(FertizilerAmount).append('K');

                },
            })
        }
    </script>

}

