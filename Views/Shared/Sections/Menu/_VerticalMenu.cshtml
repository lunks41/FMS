                </li>
                <li class='menu-item@(currentPage == "/Transactions/GetRemarkEntry" ? " active" : "")'>
                    <a asp-controller="Transactions" asp-action="GetRemarkEntry" class="menu-link">
                        <div>Remark</div>
                    </a>
                </li>
            </ul>
        </li>

        <!-- Report -->
        <li class="menu-header fw-medium mt-4">
            <span class="menu-header-text">Report</span>
        </li>
        <!-- Transaction -->
        <li class='menu-item@(currentPage.StartsWith("/Report") ? " active open" : "")'>
