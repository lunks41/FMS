            <span class="menu-header-text">Transaction &amp; Expenses</span>
        </li>
        <!-- Transaction -->
        <li class='menu-item@(currentPage.StartsWith("/Transactions") ? " active open" : "")'>
            <a href="javascript:void(0);" class="menu-link menu-toggle">
                <i class="menu-icon tf-icons mdi mdi-account-outline"></i>
                <div>Transaction</div>
            </a>
            <ul class="menu-sub">
                <li class='menu-item@(currentPage == "/Transactions/GetSale" ? " active" : "")'>
                    <a asp-controller="Transactions" asp-action="GetSale" class="menu-link">
                        <div>Sale</div>
                    </a>
                </li>
                <li class='menu-item@(currentPage == "/Transactions/GetExpense" ? " active" : "")'>
